{
  "ConnectionStrings": {
    "DefaultConnection": "server=${DB_HOST:127.0.0.1};port=${DB_PORT:3306};database=${DB_NAME:chatbot_platform};user=${DB_USER:root};password=${DB_PASSWORD:root123};SslMode=Preferred"
  },
  "Jwt": {
    "Key": "${JWT_KEY}",
    "Issuer": "Voia.Api",
    "Audience": "Voia.Client",
    "SecretKey": "${JWT_SECRET_KEY}",
    "AccessTokenExpiryMinutes": 45,
    "RefreshTokenExpiryDays": 7
  },
  "FastApi": {
   "BaseUrl": "http://127.0.0.1:8000"
  },
  "FileUpload": {
    "MaxSizeMB": 10,
    "Provider": "local"
  },
  "RateLimit": {
    "Enabled": true,
    "RequestsPerMinute": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EmailSettings": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "${SMTP_USERNAME}",
    "SmtpPassword": "${SMTP_PASSWORD}",
    "FromEmail": "${SMTP_FROM_EMAIL}",
    "FromName": "VOIA Notifications",
    "EnableSsl": true,
    "EnableNotifications": false,
    "DashboardUrl": "http://localhost:3000"
  }
}
