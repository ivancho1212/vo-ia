# VIA Development - Local Secrets File
# IMPORTANT: This file should NEVER be committed to git
# Add .env to .gitignore before using this

# DATABASE
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=chatbot_platform
DB_USER=root
DB_PASSWORD=root123

# JWT SECRETS (IMPORTANT: Generate unique and long values for production)
# For development, you can use these, but for production:
# Run: openssl rand -base64 32
JWT_KEY=dev-jwt-key-at-least-32-characters-long-for-testing-only-not-production
JWT_SECRET_KEY=dev-jwt-secret-at-least-32-chars-long-for-testing-only-not-production

# REDIS (Optional, for distributed caching)
# If not set, falls back to in-memory cache
REDIS_CONNECTION=redis://127.0.0.1:6379

# VECTOR API (Python)
VECTOR_API_URL=http://127.0.0.1:8000

# CORS CONFIGURATION
# Frontend origins with authentication
CORS:FrontendOrigins=http://localhost:3000,http://127.0.0.1:3000,http://127.0.0.1:5500,http://localhost:5500,https://voia-client.lat

# Widget embedding origins (can be more permissive)
CORS:WidgetOrigins=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5006,http://127.0.0.1:5006

# Strict origins for critical endpoints (admin, security, data deletion)
CORS:StrictOrigins=https://voia-client.lat,https://app.voia.lat

# RATE LIMITING
RateLimit:RequestsPerMinute=100
RateLimit:Enabled=true

# ENVIRONMENT
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://0.0.0.0:5000

