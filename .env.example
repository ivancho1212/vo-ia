# ===================================
# VIA API - CONFIGURATION TEMPLATE
# ===================================
# Copy this file to .env and fill in the values
# This file should NOT be committed to git

# DATABASE
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=chatbot_platform
DB_USER=root
DB_PASSWORD=your-secure-password-here

# JWT SECRETS
# Generate a secure key: openssl rand -base64 32
JWT_KEY=your-jwt-key-min-32-characters-here
JWT_SECRET_KEY=your-jwt-secret-key-min-32-characters-here

# REDIS (Optional, for distributed caching)
# If not set, falls back to in-memory cache
REDIS_CONNECTION=redis://127.0.0.1:6379

# VECTOR API (Python)
VECTOR_API_URL=http://127.0.0.1:8000

# CORS CONFIGURATION (Optional, for production)
# Comma-separated list of allowed frontend origins
CORS:FrontendOrigins=http://localhost:3000,http://127.0.0.1:3000,http://127.0.0.1:5500,http://localhost:5500,https://voia-client.lat

# Comma-separated list of allowed widget embedding origins (for public widgets)
# Consider restricting this in production to known CDN/hosting domains
CORS:WidgetOrigins=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5006,http://127.0.0.1:5006

# RATE LIMITING
RateLimit:RequestsPerMinute=100
RateLimit:Enabled=true

# ENVIRONMENT
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://0.0.0.0:5000

